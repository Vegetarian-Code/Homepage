<!-- Modal -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="todo-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                   html: {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="modal-header">
            <h3><span class="modal-title label label-default">Sign Up</span></h3>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <div class="col-md-12">
                <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.text_field :first_name, placeholder: 'First Name', class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.number_field :weight, placeholder: 'Weight', class: 'form-control', min: 0 %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.number_field :height, placeholder: 'Height', class: 'form-control', min: 0 %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.number_field :age, placeholder: 'Age', class: 'form-control', min: 0 %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Sign Up", class: "btn btn-primary" %>
            <button class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
      <% end %>
    </div>
  </div>
</div>